<h1>Registered users:</h1>
<table>
  <tr>
    <th>Email</th>
    <th>Questions contributed to:</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.email, user_path(user) %></td>
    <td style="text-align:center"><%= user.topics.size %>
  </tr>
<% end %>
</table>

