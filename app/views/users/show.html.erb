<h1>Contributions by <%= @user.email %>:</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
  </tr>
<% @user.topics.each do |top| %>
  <tr>
    <td><%= top.question %></td>
    <td><%= top.answer %></td>
    <td><%= link_to 'Show', top %></td>
    <td><%= link_to 'Edit', edit_topic_path(top) %></td>
    <td><%= link_to 'Destroy', top, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Home', topics_path %>
